<!DOCTYPE html>
<html lang="es">
  <%- include('head');%>
  <body class="container bg-light">
    <%- include('navbar');%>
    <br>
    <h2 class="text-danger mt-4">Productos cargados</h2>
    <% if (content.length == 0) { %>
    <h5 class="alert-danger rounded p-2">No se encontraron datos</h5>
    <% } else { %>
      <br>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">TÃ­tulo</th>
          <th scope="col">Precio</th>
          <th scope="col">Imagen</th>
        </tr>
      </thead>
      <tbody>
        <% content.forEach(producto => { %>
        <tr>
          <th scope="row"><%= producto.id %></th>
          <td><%= producto.title %></td>
          <td><%= producto.price %></td>
          <td>
            <img width="30px" src=<%= producto.thumbnail %> alt="Img-Productos">
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
    <% } %> <%- include('scripts');%>
  </body>
</html>
